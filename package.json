{
  "name": "openapi",
  "version": "1.0.0",
  "scripts": {
    "dev": "yarn docd run --rm --service-ports api",
    "dev:in-docker": "yarn install && yarn dev:watch",
    "dev:watch": "nodemon --delay 250ms -e js,graphql -x 'kill-port 9229 && yarn dev:watch:debug'",
    "dev:watch:debug": "node --inspect=0.0.0.0:9229 packages/server/index.js | pino-pretty --translateTime",
    "start": "node packages/server/index.js",
    "lint": "eslint packages/",
    "docd": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [],
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.7.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.2",
    "kill-port": "^1.3.2",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.18.4",
    "pino-pretty": "^2.2.2",
    "prettier": "^1.14.3"
  }
}
